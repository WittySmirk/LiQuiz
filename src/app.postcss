/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
    body {
        @apply bg-bg-color-dark;
        @apply text-text-color-dark;
        @apply font-ubuntu;
    }

    h1 {
        @apply text-4xl;
        @apply text-highlight-color-dark;
        @apply pt-8;
        @apply pb-8;
        @apply font-medium;
    }

    a {
        @apply bg-undertone-color-dark;
        @apply text-text-color-dark;
        @apply p-1;
        @apply mb-5;
        @apply mr-1;
        @apply ml-1;
    }
}
